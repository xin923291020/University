<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_book_revise"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ycx.ebook.BookReviseActivity">

    <TextView
        android:text="书名："
        android:textSize="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bookNameTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/bookNameEditText"
        android:layout_toLeftOf="@+id/bookNameEditText"
        android:layout_toStartOf="@+id/bookNameEditText" />

    <EditText
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/bookNameEditText"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="作者："
        android:textSize="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/authorTextView"
        android:layout_alignBottom="@+id/authorEditText"
        android:layout_toLeftOf="@+id/authorEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bookNameTextView" />

    <EditText
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/authorEditText"
        android:layout_below="@+id/bookNameEditText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/publisherEditText"
        android:layout_below="@+id/authorEditText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="出版社："
        android:textSize="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/publisherTextView"
        android:layout_below="@+id/authorTextView"
        android:layout_toLeftOf="@+id/authorEditText"
        android:layout_alignBottom="@+id/publisherEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/ISBNEditText"
        android:layout_below="@+id/publisherEditText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="ISBN："
        android:textSize="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ISBNTextView"
        android:layout_below="@+id/publisherEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/publisherEditText"
        android:layout_toStartOf="@+id/publisherEditText"
        android:layout_above="@+id/ClassifyTextView" />

    <TextView
        android:text="分类："
        android:textSize="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ClassifyTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ISBNEditText"
        android:layout_toLeftOf="@+id/ISBNEditText"
        android:layout_toStartOf="@+id/ISBNEditText"
        android:layout_alignBottom="@+id/classifySpinner" />

    <Button
        android:text="确认修改"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reviseButton"
        android:onClick="reviseButton_Click"
        android:layout_below="@+id/ClassifyTextView"
        android:layout_toRightOf="@+id/ClassifyTextView"
        android:layout_toEndOf="@+id/ClassifyTextView"
        android:layout_marginTop="38dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/classifyReviseSpinner"
        android:layout_below="@+id/ISBNEditText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/ISBNTextView"
        android:layout_toEndOf="@+id/ISBNTextView" />
</RelativeLayout>
